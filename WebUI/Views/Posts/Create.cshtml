@model PostRequestViewModel

<h1>Create</h1>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="AuthorId">Author</label>
        <select asp-for="AuthorId" asp-items="@ViewBag.Authors"></select>
        <span class="bg-danger" asp-validation-for="AuthorId"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status">Status</label>
        <select asp-for="Status"  asp-items="@ViewBag.Status"></select>
        <span class="bg-danger" asp-validation-for="Status"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content">Content</label>
        <input asp-for="Content" />
        <span class="bg-danger" asp-validation-for="Content"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
